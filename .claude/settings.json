{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "glm-4.5-air",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "glm-4.7",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "glm-4.7",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "ANTHROPIC_AUTH_TOKEN": "39414d52fc1444b0a0eff04ece39ede8.EURV5t9mup1ft3PQ",
    "ANTHROPIC_BASE_URL": "https://api.z.ai/api/anthropic",
    "API_TIMEOUT_MS": "3000000",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "includeCoAuthoredBy": false,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/enhanced-notify.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/danger-alert.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Write|Edit|Read",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/tool-tracker.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/session-start-notify.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/session-end-notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/stop-notify.sh"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/scripts/context-monitor.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash $HOME/.claude/statusline-enhanced.sh"
  },
  "enabledPlugins": {
    "agent-sdk-dev@claude-code-plugins": true,
    "beads@beads-marketplace": true,
    "claude-opus-4-5-migration@claude-code-plugins": true,
    "code-review@claude-code-plugins": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-code-plugins": true,
    "commit-commands@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true,
    "explanatory-output-style@claude-code-plugins": true,
    "feature-dev@claude-code-plugins": true,
    "figma@claude-plugins-official": true,
    "frontend-design@claude-code-plugins": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "learning-output-style@claude-code-plugins": true,
    "linear@claude-plugins-official": true,
    "plugin-dev@claude-code-plugins": true,
    "pr-review-toolkit@claude-code-plugins": true,
    "ralph-wiggum@claude-code-plugins": true,
    "security-guidance@claude-code-plugins": true,
    "sentry@claude-plugins-official": true,
    "glm-plan-usage@zai-coding-plugins": true,
    "ralph-wiggum@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "greptile@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "Bash(git add:*)"
    ],
    "ask": [
      "Bash(gh pr create:*)",
      "Bash(git commit:*)"
    ],
    "deny": [
      "Read(*.env)",
      "Bash(rm:*)"
    ],
    "defaultMode": "bypassPermissions"
  },
  "alwaysThinkingEnabled": true
}
