[colors]
background = #aa222222
background-alt = #444
foreground = #fff
foreground-alt = #55aa55
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
weather-fg = #ffd06d

[bar/top]
monitor = ${env:MONITOR:Virtual1}
width = 100%
height = 40
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

dim-value = 0.6

line-size = rgba(0, 0, 0, 0.05)3
line-color = #f00

border-size = 0
border-bottom-size = 4
border-color = #00000000

