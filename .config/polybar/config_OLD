padding-right = 3

module-margin-left = 3
module-margin-right = 3

font-0 = HanWangHeiHeavy:size=12;1
font-1 = Agave:size=10;1
font-2 = FontAwesome:size=13;1
; font-0 = fixed:pixelsize=10;1
; font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
; font-2 = "Wuncon Siji:pixelsize=10;1"
; font-3 = fontawesome:pixelsize=13

modules-left = i3
modules-center = xwindow
; Laptop
; modules-right = volume xkeyboard battery nm date powermenu
; Desktop
; modules-right = volume xkeyboard nm date powermenu
modules-right = weather

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

;wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

